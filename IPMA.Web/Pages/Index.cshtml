@page
@model IndexModel
@{
    ViewData["Title"] = "Página Inicial";
}

<div class="row app-home">
    <svg class="app-home-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="none">
        <polygon points="0,0 30,100 65,21 90,100 100,75 100,100 0,100"/>
        <polygon points="0,0 15,100 33,21 45,100 50,75 55,100 72,20 85,100 95,50 100,80 100,100 0,100"/>
    </svg>
    <section class="col-12 col-md-6 app-home__brand app-home-brand">
        <img src="/images/mill.svg" class="mx-auto d-block app-home-brand__image" alt="">
    </section>

    <section class="col-12 col-md-6 app-home-search">
        <h1>Previsão Meteorológica.</h1>
        <div class="app-home-search__container">
            <p>Consulte directamente dados fornecidos pelo Intituto Português do Mar e da Atmosfera.</p>
            <form method="post">
                <div class="form-group">
                    <label asp-for="District">Pesquisar por Districto ou Ilha</label>
                    <select asp-for="District" asp-items="Model.Districts" class="form-control"></select>
                </div>
                <button type="submit"
                        class="btn btn-outline-primary">
                    Pesquisar
                </button>
            </form>
        </div>

    </section>
</div>

<style>
    .app-home {
        margin-top: 60px;
    }
   
    .app-home-svg {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 30vh;
        left: 0;
        fill: #b9eff782;
    }
    .app-home-brand {}
    .app-home__brand {}
    .app-home-brand__image {
       max-height: 350px;
    }
    
    .app-home-search {}
    .app-home-search__container {
        background-color: white;
        border-radius: 20px;
        padding: 20px 30px;
        box-shadow: 1px 1px 20px 5px #d0d0d0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin-top: 1rem;
    }
    
    @@media screen and (max-width: 767px){
        .app-home-search {
            margin-top: 2rem;
        }
    } 
</style>